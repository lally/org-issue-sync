                      bytestring >= 0.10, vector >= 0.10, split >= 0.2.2,
                      containers >= 0.5, HStringTemplate >= 0.7.3, parsec,
                      github, configurator, unordered-containers, text, old-locale,
                      regex-posix, exceptions, Glob, hashable, time, tagsoup, HTF, 
                      syb, random, http-types, http-conduit, aeson, bytestring, 
                      directory, Glob, Diff

  -- Other library packages from which modules are imported.
  if flag(network-uri)
     build-depends: network-uri >= 2.6, network >= 2.6
  else
     build-depends: network-uri < 2.6, network < 2.6
  -- Directories containing source files.
  hs-source-dirs:      src

  -- Base language which the package is written in.
  default-language:    Haskell2010


